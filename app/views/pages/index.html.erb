<div class="container-fluid">
  <div class="row">

    <div class="col-md-8 col-md-offset-2 text-center">

      <div class="row">
        <h1>Liftit store</h1>
        <h4> <strong>Suscribete y mantente actualizado de todos nuestros nuevos productos, ademas constatemente estamos regalando premios a nuestros suscriptores</strong></h4>

      </div>

      <div class="row">
        <%= form_for @subscriber  do |f| %>
          <div class="form-horizontal">
            <div class="form-group">
              <%= f.text_field :email, placeholder: "Email", class:"form-control text-center" %>
            </div>

            <div class="form-group">
              <%= f.submit "Suscribirse", class: "btn btn-primary form-control text-center" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>


  </div>
</div>

