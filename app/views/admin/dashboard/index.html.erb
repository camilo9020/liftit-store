<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading text-center"> <strong>Listado de Premios y Disponibilidad</strong></div>

    <!-- Table -->
  <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @prizes.each do |prize| %>
      <tr>
        <td><%= link_to prize.name, admin_prize_path(prize)  %></td>
        <td><%= prize.description %></td>
        <td>
          <%= prize.amount %>
        </td>
      </tr>
    <% end %>

  </tbody>
  </table>
</div>