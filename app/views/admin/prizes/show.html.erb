<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <p id="notice"><%= notice %></p>
        <div class="panel-heading">
        <p>
          <strong>Name:</strong>
          <%= @prize.name %>
        </p>
        </div>
        <div class="panel-body">
        <p>
          <strong>Description:</strong>
          <%= @prize.description %>
        </p>
        <p>
          <strong>Amount:</strong>
          <%= @prize.amount %>
        </p>
       </div>

        <div class="panel-footer center-block">
          <%= link_to 'Editar', edit_admin_prize_path(@prize), class: "btn btn-default" %>
          <%= link_to 'Eliminar', admin_prize_path(@prize), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
          <%= link_to 'Regresar', admin_path, class: "btn btn-default"%>
        </div>
    </div>
  </div>
</div>
